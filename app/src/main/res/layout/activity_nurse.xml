<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage"
    android:orientation="vertical"
    android:background="@drawable/gradient4">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="530dp"
        android:gravity="center"
        android:text="Nurse Booking"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:textSize="25dp"
        android:text="No of Nurses available:       9" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:textSize="25dp"
        android:text="Timing for 1 day:  8AM TO 8PM" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:textSize="25dp"
        android:text="Cost for 1 day:            3000Rs" />

    <Button
        android:id="@+id/nurseb1"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="109dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="275dp"
        android:background="@drawable/button2"
        android:text="PROCEED" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="Our Nurses will reach your location the next morining"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>